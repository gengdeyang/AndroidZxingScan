<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="任务信息"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_text01"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="预计送达日"
                android:textColor="@color/black_big"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/item_text02"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="运单号"
                android:textColor="@color/black_big"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/item_text03"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="特约店简称"
                android:textColor="@color/black_big"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/item_text04"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="CAR"
                android:textColor="@color/black_big"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/item_text05"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="SUV"
                android:textColor="@color/black_big"
                android:textSize="13sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/taskinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView181"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="7dp"
                android:text="合计：" />

            <TextView
                android:id="@+id/textView182"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="7dp"
                android:text="0台" />
        </LinearLayout>

        <TextView
            android:id="@+id/damage_reporst_damage_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="车辆信息"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/damage_report_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>

        <GridLayout
            android:id="@+id/damage_report_lost_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="4"
            android:orientation="horizontal">

        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="轿运车号：" />

            <EditText
                android:id="@+id/edit_carrierscarnum"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:hint="@string/carrierscarnum"/>

            <Button
                android:id="@+id/ercodebut"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/car01"
                android:text="" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="司机姓名：" />

            <EditText
                android:id="@+id/edit_sijiname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:hint="@string/carrierscarnum"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="     手机号：" />

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:hint="@string/carrierscarnum"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="隶属机构：" />

            <EditText
                android:id="@+id/edit_orgname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:hint="@string/carrierscarnum"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_tijiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="提交" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>